@page
@model ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control"
                   asp-for="SearchTerm" />@*if i add segmant to route will recive it as part of route if don;t it will be querystring*@
                <span class="input-group-btn">
                    <button class="btn btn-default">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
        </div>
    </form>


    @foreach (var restaurant in Model.Restaurants)
    {
        <partial name="_Summary" model="restaurant" />
    }
    <a asp-page="./Edit"
       class="btn btn-primary">Add new restaurant</a>
    @section footer{
        <h5 class="bg-primary text-center">List Page</h5>
    }